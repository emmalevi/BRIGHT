<div class="issue-show">
  <div class="container ml-2">
    <div id="resume" class="resume">
      <div class="section-title">
        <h2> <%= @issue.issue_type  %></h2>
        <p> <%= @issue.name %> </p>
      </div>

      <img src=<%= cl_image_path @issue.photo.key, width: 400, height: 200, crop: :fill %> id="img-show" alt="">

      <div class="row">
        <div class="col-lg-6">
          <div class="resume-item pb-0">
            <h4>Origin</h4>
            <p><em> <%= @issue.origin %></em></p>
            <p>
              <ul>
                <li><strong>Location:</strong> <%= @issue.location  %></li>
              </ul>
            </p>
          </div>

          <!-- <h3 class="resume-title">Education</h3> -->
          <div class="resume-item">
            <h4>Description</h4>
            <h5>Death Count: <%= @issue.death_count %></h5>
            <h5> Impacted Population: <%= @issue.impacted_population %></h5>
            <p> <%= @issue.description  %></p>
          </div>

        </div>
        <!-- End Issue Description Section -->

        <!-- ======= Charities Section ======= -->
        <div class="col-lg-6">
          <div id="services" class="services">
            <div class="container">
              <div class="mt-4"></div>
                <div class="section-title">
                  <h2>Local charities</h2>
                  <!-- <p>My Services</p> -->
                </div>

                <div class="row">
                  <% @issue.charities.each do |charity| %>
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4">
                      <div class="icon-box">
                        <div class="icon"><i class="bx bx-world"></i></div>
                        <h4><%= link_to charity.name, charity_path(charity) %> </h4>
                        <p> Rating: <%= charity.rating %></p>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>        <!-- End Charities Section -->
  </div>
</div>

