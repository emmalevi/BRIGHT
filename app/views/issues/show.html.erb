<div class="issue-show">
  <div id="portfolio" class="portfolio">
    <div class="container">
      <div class="section-title">
        <h2><%= @issue.issue_type %></h2>
        <p> <%= @issue.name %> </p>
      </div>

      <div class="row portfolio-container">
        <div class="col-lg-4 col-md-6 portfolio-item filter-app">
          <img src=<%= cl_image_path @issue.photo.key, width: 400, height: 200, crop: :fill %> class="img-fluid" alt="">
        </div>
      </div>

      <h4>Origin</h4>
      <p> <%= @issue.origin %> </p>


      <h4>Location</h4>
      <p> <%= @issue.location %> </p>

      <h4>Description</h4>
      <p> <%= @issue.description %> </p>

      <h4>Impacted Population</h4>
      <p> <%= @issue.impacted_population %> </p>

      <h4>Death count</h4>
      <p> <%= @issue.death_count %> </p>


      <h4>Charity Cases</h4>
      <% @issue.charities.each do |charity| %>
      <div class="col-lg-4 col-md-6 portfolio-item filter-app">
        <div class="portfolio-wrap">
          <img src="https://res.cloudinary.com/djdwgio05/image/upload/v1587325383/z1Gm79rBPrNkjPjXauTNqPvT.jpg" class="img-fluid" alt="">
          <div class="portfolio-info">
            <h4> <%= charity.name %></h4>
          </div>
        </div>
      </div>
      <% end %>

      <section id="services" class="services">
        <div class="container">

          <div class="section-title">
            <h2>Services</h2>
            <p>My Services</p>
          </div>

          <div class="row">
            <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
              <div class="icon-box">
                <div class="icon"><i class="bx bxl-dribbble"></i></div>
                <h4><a href="">Lorem Ipsum</a></h4>
                <p>Voluptatum deleniti atque corrupti quos dolores et quas molestias excepturi</p>
              </div>
            </div>
            </div>

          </div>

      </section>
    </div>

  </div>

</div>

